<Application x:Class="SteadyState.MainProject.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SteadyState.MainProject.WPF"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
					<FontFamily x:Key="SegoeFluentIcons">pack://,,,/Resources/#Segoe Fluent Icons</FontFamily>
				</ResourceDictionary>
				<ResourceDictionary>
					<FontFamily x:Key="SegoeUIVariableStaticDisplay">pack://application:,,,/Resources/#Segoe UI Variable Static Display</FontFamily>
				</ResourceDictionary>
				<ResourceDictionary Source="Resources\ButtonsResources.xaml"/>
				<ResourceDictionary Source="Resources\MenuBarResources.xaml"/>
				<ResourceDictionary Source="Resources\TabControlResources.xaml"/>
				<ResourceDictionary Source="Resources\ScrollBarResources.xaml"/>
				<ResourceDictionary Source="Resources\DataGridResources.xaml"/>
				<ResourceDictionary Source="Resources\ComboBoxResources.xaml"/>
				<ResourceDictionary Source="Resources\CheckBoxResources.xaml"/>
				<ResourceDictionary Source="Resources\RadioButtonResources.xaml"/>
				<ResourceDictionary Source="Resources\ListViewResources.xaml"/>
				<ResourceDictionary Source="Resources\ColorsDictionary.xaml"/>

			</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
	</Application.Resources>
</Application>
